@model List<CodingEventsDemo.Models.EventCategory>

<h1>All Coding Events Categories</h1>

@if (Model.Count == 0)
{
    <p>No Event Categories Yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Category Name
            </th>
        </tr>
        @foreach (EventCategory category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
            </tr>
        }
    </table>
}

